{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitReturns": true,
    "allowJs": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
